<!-- verb_253_srE_Eml سَرَّعَ العملَ -->
  <rule id="verb_253_srE_Eml" name="سرع عمل">
    <pattern>
      <marker>
        <token inflected="yes" postag="V.*;.*p.?.?;.*" postag_regexp="yes" skip="1">سَرَّعَ</token>
      </marker>
      <token inflected="yes" postag="N.*;--.?" postag_regexp="yes">عمل</token>
    </pattern>
